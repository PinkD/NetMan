<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/detail_height"
        android:gravity="center"
        android:text="@string/tips"
        />

    <ImageButton
        android:id="@+id/detail_last_page"
        android:layout_width="@dimen/detail_height"
        android:layout_height="@dimen/detail_height"
        android:layout_gravity="center_vertical"
        android:background="@color/none"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        />

    <ImageButton
        android:id="@+id/detail_next_page"
        android:layout_width="@dimen/detail_height"
        android:layout_height="@dimen/detail_height"
        android:layout_gravity="center_vertical|end"
        android:background="@color/none"
        android:scaleType="fitXY"
        android:src="@drawable/ic_forward"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/item_height_default"
        android:text="@string/test_root"
        />

</FrameLayout>